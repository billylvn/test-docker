<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <!-- Tree -->
        <record id="budget_category_view_tree" model="ir.ui.view">
            <field name="name">budget.category.view.tree</field>
            <field name="model">budget.category</field>
            <field name="arch" type="xml">
                <tree editable='bottom'>
                    <field name="name" required="1"/>
                    <field name="description" />
                    <field name="consumed_all_budget" />
                </tree>
            </field>
        </record>

        <record id="income_category_view_tree" model="ir.ui.view">
            <field name="name">income.category.view.tree</field>
            <field name="model">income.category</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name" required="1"/>
                    <field name="description" />
                </tree>
            </field>
        </record>
    
        <!-- Action -->
        <record id="budget_category_action" model="ir.actions.act_window">
            <field name="name">Budget Category</field>
            <field name="res_model">budget.category</field>
            <field name="view_mode">tree</field>
        </record>

        <record id="income_category_action" model="ir.actions.act_window">
            <field name="name">Income Category</field>
            <field name="res_model">income.category</field>
            <field name="view_mode">tree</field>
        </record>
    
    </data>
    

</odoo>
