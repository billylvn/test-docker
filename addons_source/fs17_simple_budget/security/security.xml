<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <!-- Groups -->
        <record model="ir.module.category" id="module_category_simple_budget">
            <field name="name">Simple Budget</field>
        </record>

        <record id="group_simple_budget_user" model="res.groups">
            <field name="name">Users</field>
            <field name="category_id" ref="module_category_simple_budget"/>
        </record>

        <record id="group_simple_budget_admin" model="res.groups">
            <field name="name">Administrator</field>
            <field name="implied_ids" eval="[(4, ref('fs17_simple_budget.group_simple_budget_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]" />
            <field name="category_id" ref="module_category_simple_budget"/>
        </record>

        <!-- Rule -->
        <record id="budget_planning_user_rule" model="ir.rule">
            <field name="name">User limited access for Budget Planning</field>
            <field name="model_id" ref="fs17_simple_budget.model_budget_planning" />
            <field name="groups" eval="[(4, ref('fs17_simple_budget.group_simple_budget_user'))]" />
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
        </record>

        <record id="budget_planning_user_admin" model="ir.rule">
            <field name="name">User no limited access for Budget Planning</field>
            <field name="model_id" ref="fs17_simple_budget.model_budget_planning" />
            <field name="groups" eval="[(4, ref('fs17_simple_budget.group_simple_budget_admin'))]" />
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

        <record id="budget_realization_user_rule" model="ir.rule">
            <field name="name">User limited access for Budget Realization</field>
            <field name="model_id" ref="fs17_simple_budget.model_budget_realization" />
            <field name="groups" eval="[(4, ref('fs17_simple_budget.group_simple_budget_user'))]" />
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
        </record>

        <record id="budget_realization_user_admin" model="ir.rule">
            <field name="name">User no limited access for Budget Realization</field>
            <field name="model_id" ref="fs17_simple_budget.model_budget_realization" />
            <field name="groups" eval="[(4, ref('fs17_simple_budget.group_simple_budget_admin'))]" />
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
    
    </data>
    

</odoo>
